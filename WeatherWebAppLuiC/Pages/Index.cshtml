@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Weather App!</h1>
</div>

<div class="text-center mt-4">
    <form method="post">
        <input asp-for="City" type="text" class="form-control d-inline-block w-75" placeholder="Input city here!" style="max-width: 250px;"/>
        <button type="submit" class="btn btn-primary ml-2">Search</button>
    </form>
    @if (Model.Weather != null)
    {
        <div class="mt-3">
            <strong>@Model.Weather.City</strong>: @Model.Weather.WeatherDescription, @Model.Weather.Temps&nbsp;°C
        </div>
    }
</div>
</div>
